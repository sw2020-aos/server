<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Author: plusperson@gmail.com -->
<mapper namespace="com.aos.supplier.SupplierMapper">
    <resultMap id="supplierResultMap" type="com.aos.supplier.Supplier">
        <result column="NO" property="no" />
        <result column="NAME" property="name" />
        <result column="PHONE_NO" property="phoneNo" />
        <result column="EMAIL" property="email" />
        <result column="ZIP_CODE" property="zipCode" />
        <result column="ADDRESS" property="address" />
        <result column="DETAIL_ADDRESS" property="detailAddress" />
        <result column="STATUS" property="status" />
    </resultMap>
    <sql id="whereSql">
        <where>
            <if test="no != null and no != ''">
                AND NO = #{no}
            </if>
            <if test="name != null and name != ''">
                AND NAME = #{name}
            </if>
            <if test="phoneNo != null and phoneNo != ''">
                AND PHONE_NO = #{phoneNo}
            </if>
            <if test="email != null and email != ''">
                AND EMAIL = #{email}
            </if>
            <if test="zipCode != null and zipCode != ''">
                AND ZIP_CODE = #{zipCode}
            </if>
            <if test="address != null and address != ''">
                AND ADDRESS = #{address}
            </if>
            <if test="detailAddress != null and detailAddress != ''">
                AND DETAIL_ADDRESS = #{detailAddress}
            </if>
            <if test="status != null and status != ''">
                AND STATUS = #{status}
            </if>
        </where>
    </sql>
    <select id="count" parameterType="com.aos.supplier.Supplier" resultType="int">
        SELECT COUNT(*)
        FROM supplier
        <include refid="whereSql" />
    </select>
    <select id="list" parameterType="com.aos.supplier.Supplier" resultMap="supplierResultMap">
         SELECT
                NO,
                NAME,
                PHONE_NO,
                EMAIL,
                ZIP_CODE,
                ADDRESS,
                DETAIL_ADDRESS,
                STATUS
         FROM supplier
            <include refid="whereSql" />
    </select>
    <select id="searchResult" parameterType="String" resultMap="supplierResultMap">
    	SELECT
                NO,
                NAME,
                PHONE_NO,
                EMAIL,
                ZIP_CODE,
                ADDRESS,
                DETAIL_ADDRESS,
                STATUS
         FROM SUPPLIER
         WHERE NAME LIKE CONCAT('%', #{keyword}, '%')
         	AND STATUS = "Y"
    </select>
    <select id="select" parameterType="com.aos.supplier.Supplier" resultMap="supplierResultMap">
        SELECT
            NO,
            NAME,
            PHONE_NO,
            EMAIL,
            ZIP_CODE,
            ADDRESS,
            DETAIL_ADDRESS,
            STATUS
        FROM supplier
        <include refid="whereSql" />
    </select>
    <select id="selectbyIngredientNo" parameterType="String" resultType="com.aos.supplier.Supplier">
        SELECT *
        FROM SUPPLIER
        WHERE NO =
        (SELECT SUPPLIER_NO
        FROM HANDLING
        WHERE INGREDIENT_NO = #{ingredientNo}
        AND STATUS = "Y")
    </select>
    
    <select id="selectSupplierOnTray" resultMap="supplierResultMap">
    	SELECT SUPPLIER.NO
    		FROM SUPPLIER, HANDLING, TRAY
    		WHERE SUPPLIER.NO = HANDLING.SUPPLIER_NO
    			AND HANDLING.STATUS = 'Y'
    			AND HANDLING.INGREDIENT_NO = TRAY.INGREDIENT_NO
    </select>
    

    <insert id="insert" parameterType="com.aos.supplier.Supplier">
        INSERT INTO supplier (
            NO,
            NAME,
            PHONE_NO,
            EMAIL,
            ZIP_CODE,
            ADDRESS,
            DETAIL_ADDRESS,
            STATUS
        ) VALUES (
            #{no},
            #{name},
            #{phoneNo},
            #{email},
            #{zipCode},
            #{address},
            #{detailAddress},
            #{status}
        )
    </insert>
    <update id="update" parameterType="com.aos.supplier.Supplier">
        UPDATE supplier
        <set>
            <if test="no != ''">
                NO = #{no},
            </if>
            <if test="name != ''">
                NAME = #{name},
            </if>
            <if test="phoneNo != ''">
                PHONE_NO = #{phoneNo},
            </if>
            <if test="email != ''">
                EMAIL = #{email},
            </if>
            <if test="zipCode != ''">
                ZIP_CODE = #{zipCode},
            </if>
            <if test="address != ''">
                ADDRESS = #{address},
            </if>
            <if test="detailAddress != ''">
                DETAIL_ADDRESS = #{detailAddress},
            </if>
            <if test="status != ''">
                STATUS = #{status},
            </if>
        </set>
        WHERE NO=#{no}
    </update>
    
    <update id="delete" parameterType="com.aos.supplier.Supplier">
        UPDATE SUPPLIER
            SET STATUS = "N"
        <include refid="whereSql" />
    </update>
</mapper>