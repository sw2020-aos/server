			requestOrderInfo.setPhoneNo(containSupplierName.getPhoneNo());
			requestOrderInfo.setUnitPrice(containIngredientName.getUnitPrice());
		} catch (Exception e) {
			e.printStackTrace();
		}
		return requestOrderInfo;
	}

